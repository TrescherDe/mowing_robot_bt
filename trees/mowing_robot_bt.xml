<?xml version="1.0"?>
<root main_tree_to_execute="BehaviorTree">
    <!-- ////////// -->
    <BehaviorTree ID="BehaviorTree">
        <ReactiveSequence>
            <ReactiveFallback>
                <Inverter>
                    <Condition ID="creatureDetected"/>
                </Inverter>
                <Action ID="updateCcpMap" write_collisionFreePathAvailable="{collisionFreePathAvailable}"/>
            </ReactiveFallback>
            <ReactiveSequence>
                <Action ID="generateCcp" read_collisionFreePathAvailable="{collisionFreePathAvailable}" write_collisionFreePathAvailable="{collisionFreePathAvailable}"/>
                <AlwaysSuccess name="Follow the ccp path"/>
            </ReactiveSequence>
        </ReactiveSequence>
    </BehaviorTree>
    <!-- ////////// -->
    <TreeNodesModel>
        <Action ID="MakeAction">
            <input_port name="A"/>
            <input_port name="B"/>
            <input_port name="C"/>
        </Action>
        <SubTree ID="MySub"/>
        <Condition ID="creatureDetected"/>
        <Action ID="generateCcp">
            <input_port default="false" name="read_collisionFreePathAvailable"/>
            <output_port default="false" name="write_collisionFreePathAvailable"/>
        </Action>
        <Action ID="updateCcpMap">
            <output_port default="false" name="write_collisionFreePathAvailable"/>
        </Action>
    </TreeNodesModel>
    <!-- ////////// -->
</root>
