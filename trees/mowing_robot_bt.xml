<?xml version="1.0"?>
<root main_tree_to_execute="BehaviorTree">
    <!-- ////////// -->
    <BehaviorTree ID="BehaviorTree">
        <ReactiveSequence>
            <ReactiveFallback>
                <Inverter>
                    <Condition ID="creatureDetected"/>
                </Inverter>
                <Action ID="addObstacle" x="0.0" y="0.0" z="0.0"/>
            </ReactiveFallback>
            <ReactiveSequence>
                <ReactiveFallback>
                    <Condition ID="checkCollisionFreeCcpPathAvailable"/>
                    <Action ID="generateCcp"/>
                </ReactiveFallback>
                <AlwaysSuccess name="Follow the ccp path"/>
            </ReactiveSequence>
        </ReactiveSequence>
    </BehaviorTree>
    <!-- ////////// -->
    <TreeNodesModel>
        <Action ID="MakeAction">
            <input_port name="A"/>
            <input_port name="B"/>
            <input_port name="C"/>
        </Action>
        <SubTree ID="MySub"/>
        <Action ID="addObstacle">
            <input_port default="0.0" name="x"/>
            <input_port default="0.0" name="y"/>
            <input_port default="0.0" name="z"/>
        </Action>
        <Condition ID="checkCollisionFreeCcpPathAvailable"/>
        <Condition ID="creatureDetected"/>
        <Action ID="generateCcp"/>
    </TreeNodesModel>
    <!-- ////////// -->
</root>
