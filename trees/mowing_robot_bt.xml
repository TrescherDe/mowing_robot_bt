<?xml version="1.0"?>
<root main_tree_to_execute="BehaviorTree">
    <!-- ////////// -->
    <BehaviorTree ID="BehaviorTree">
        <Sequence>
            <ReactiveFallback>
                <Inverter>
                    <Condition ID="creatureDetected"/>
                </Inverter>
                <Action ID="updateCcpMap" collisionFreePathAvailable="false"/>
            </ReactiveFallback>
            <ReactiveSequence>
                <ReactiveFallback>
                    <Action ID="generateCcp"/>
                </ReactiveFallback>
                <AlwaysSuccess name="Follow the ccp path"/>
            </ReactiveSequence>
        </Sequence>
    </BehaviorTree>
    <!-- ////////// -->
    <TreeNodesModel>
        <SubTree ID="MySub"/>
        <Condition ID="checkIfTrue"/>
        <Condition ID="creatureDetected"/>
        <Action ID="generateCcp"/>
        <Action ID="updateCcpMap">
            <output_port default="false" name="collisionFreePathAvailable"/>
        </Action>
    </TreeNodesModel>
    <!-- ////////// -->
</root>
